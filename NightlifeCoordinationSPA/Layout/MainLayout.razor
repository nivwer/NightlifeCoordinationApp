@inherits LayoutComponentBase

@using NightlifeCoordinationSPA.Layout.Components.NavMenu
@using NightlifeCoordinationSPA.Layout.Components.NavBar

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())"
            Icon="@(DrawerOpen ? Icons.Material.Filled.ArrowBackIosNew : Icons.Material.Filled.Menu)" />
        <MudText Typo="Typo.h5" Class="mt-1">Nightlife</MudText>
        <MudSpacer />
        <NavBar />
    </MudAppBar>
    <MudDrawer @bind-Open="DrawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2" Variant="@DrawerVariant.Mini"
        Breakpoint="@Breakpoint.Lg">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>