@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims

<AuthorizeView>
    <Authorized>
        <MudStack Spacing="4" Row="true">
            <MudChip Icon="@Icons.Material.Filled.Person" Color="Color.Primary" >@context.User.FindFirst(ClaimTypes.Email)!.Value</MudChip>
            <MudAvatar Color="Color.Primary">@context.User.FindFirst(ClaimTypes.Email)!.Value[0]</MudAvatar>
        </MudStack>
    </Authorized>
</AuthorizeView>
