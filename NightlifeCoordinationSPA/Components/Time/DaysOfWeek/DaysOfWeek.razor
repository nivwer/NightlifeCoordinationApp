@using NightlifeCoordinationSPA.Components.Time.Schedule

<MudStack Spacing="2">
    @if (OpenHours.Open != null)
    {
        @foreach (var day in DaysOfWeekArray)
        {
            <MudStack Row="true" Class="justify-space-between">
                <MudText Color="@(GetTextColorByDay(day))">
                    @GetDayAbbreviation(day)
                </MudText>
                <MudStack Spacing="0" Class="align-end">
                    @foreach (var OpenTime in OpenHours.Open)
                    {
                        @if (OpenTime.Day == day)
                        {
                            <Schedule OpenTime="OpenTime" IsOpenNow="OpenHours.IsOpenNow" />
                            @if (OpenTime.IsOvernight.HasValue && OpenTime.IsOvernight.Value)
                            {
                                <MudText>Is Overnight</MudText>
                            }
                        }
                    }
                </MudStack>
            </MudStack>
        }
    }

</MudStack>