@if (OpenTime.Start != null && OpenTime.End != null)
{
    @if (!OnlyOpen || (OnlyOpen && IsOpenNowByTime()))
    {
        <MudText Color="@GetTextColorByTime()">
            @FormatTime(OpenTime.Start) - @FormatTime(OpenTime.End)
        </MudText>
    } 
    else if (IsOpenNow.HasValue && IsOpenNow.Value && !IsOpenNowByTime())
    {
        <MudText Color="Color.Error">( Irregular schedule )</MudText>
    }
}