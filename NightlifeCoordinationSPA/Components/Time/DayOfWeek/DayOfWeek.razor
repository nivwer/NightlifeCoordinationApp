@using NightlifeCoordinationSPA.Components.Time.Schedule

@if (OpenHours.Open != null)
{
    @foreach (var day in DaysOfWeekArray)
    {
        @if (IsCurrentDay(day))
        {
            <MudStack Row="true">
                <MudText Color="Color.Default">
                    @GetDayAbbreviation(day)
                </MudText>
                <MudStack Spacing="0">
                    @foreach (var OpenTime in OpenHours.Open)
                    {
                        @if (OpenTime.Day == day)
                        {
                            <Schedule OpenTime="OpenTime" IsOpenNow="OpenHours.IsOpenNow" OnlyOpen="true" 
                                ColorOpen="false" />
                        }
                    }
                </MudStack>
            </MudStack>
        }
    }
}